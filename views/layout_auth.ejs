<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= typeof title !== 'undefined' ? title : 'Sistema PG1' %></title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Animate.css -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Tu CSS personalizado -->
  <link rel="stylesheet" href="/css/styles.css">

  <style>
    body {
      background: linear-gradient(135deg, #7ec6e2 0%, #262fa7 100%);
      font-family: 'Segoe UI', sans-serif;
      padding-top: 70px; /* evita que el navbar tape el contenido */
    }

    .navbar-personalizado {
      background-color: #3f3dbb;
      padding: 12px 20px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    }

    .btn-navbar {
      background-color: white !important;
      color: black !important;
      font-weight: 700 !important;
      border: none;
      border-radius: 8px;
      padding: 6px 15px;
      text-decoration: none;
      display: inline-block;
      transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
    }

    .btn-navbar:hover {
      background-color: #05508d !important;
      color: white !important;
      transform: scale(1.05);
    }

    .logo-gob {
      height: 70px;
      width: auto;
      margin-right: 15px;
    }
  </style>
</head>
<body>
  <!-- ðŸ”¹ Navbar simplificada SOLO para login/register/forgot/reset -->
  <nav class="navbar-personalizado fixed-top">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      
      <!-- Imagen + BotÃ³n Inicio -->
      <div class="d-flex align-items-center">
        <img src="/images/gob.png" alt="Gobierno" class="logo-gob">
        <a href="/" class="btn btn-navbar">Inicio</a>
      </div>

      <!-- MenÃº derecho (solo registrar/login) -->
      <div class="d-flex align-items-center gap-2">
        <a href="/register" class="btn btn-navbar">Registrarse</a>
        <a href="/login" class="btn btn-navbar">Login</a>
      </div>

    </div>
  </nav>

  <!-- Contenido dinÃ¡mico -->
  <div class="container mt-4">
    <%- body %>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- ðŸ”¹ Bloque para notificaciones desde las vistas -->
  <% if (typeof msg !== "undefined" && msg) { %>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        Swal.fire({
          icon: '<%= msg.type %>',  // success, error, warning, info
          title: '<%= msg.text %>',
          showConfirmButton: false,
          timer: 3000,
          background: '#262fa7',
          color: '#fff',
          toast: true,
          position: 'top',
          customClass: {
            popup: 'animate__animated animate__fadeInDown'
          }
        });
      });
    </script>
  <% } %>
</body>
</html>
