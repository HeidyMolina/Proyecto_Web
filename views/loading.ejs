<% /* views/loading.ejs */ %>
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Cargando plataforma...</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <style>
    body, html {
      height: 100%;
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: url('/images/imagen_carga1.png') no-repeat center center fixed;
      background-size: cover;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
    }

    .fondo-transparente {
      background-color: rgba(0, 0, 0, 0.6);
      padding: 40px 30px;
      border-radius: 15px;
      box-shadow: 0 0 30px rgba(0, 0, 0, 0.7);
      animation: slideFadeIn 1.2s ease-out;
      max-width: 800px;
    }

    .texto-uno {
      font-size: 3.5rem;
      font-weight: bold;
      color: #FFD700;
      text-shadow: 0 0 10px #000;
      animation: slideFadeIn 1.5s ease-out forwards;
    }

    .texto-dos {
      font-size: 2.2rem;
      margin-top: 20px;
      color: #fff8dc;
      text-shadow: 0 0 6px #000;
      animation: slideFadeIn 2.5s ease-out forwards;
    }

    .anuncio-contenido {
      margin-top: 30px;
      animation: slideFadeIn 2.8s ease-out forwards;
    }

    .anuncio-contenido h3 {
      color: #FFD700;
      margin-bottom: 10px;
      font-size: 1.8rem;
    }

    .anuncio-contenido img {
      max-width: 100%;
      height: auto;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    }

    @keyframes slideFadeIn {
      0% {
        opacity: 0;
        transform: scale(0.8) translateY(30px);
      }
      100% {
        opacity: 1;
        transform: scale(1) translateY(0);
      }
    }
  </style>

  <script>
    // Redirigir al dashboard despuÃ©s de 5 segundos
    setTimeout(() => {
      window.location.href = "/dashboard";
    }, 5000);
  </script>
</head>
<body>
  <div class="fondo-transparente">
        <% if (anuncio) { %>
      <div class="anuncio-contenido">
        <h3><%= anuncio.titulo %></h3>
        <img src="<%= anuncio.imagen %>" alt="Anuncio">
      </div>
    <% } %>
  </div>
</body>
</html>
