<script>
  const imagenes = [
    "/images/Pagina1.png",
    "/images/Pagina2.png",
    "/images/Pagina3.png",
    "/images/Pagina4.png",
    "/images/Pagina5.png",
    "/images/Pagina6.png",
    "/images/Pagina7.png",
    "/images/Pagina8.png",
    "/images/Pagina9.png",
    "/images/Pagina10.png",
    "/images/Pagina11.png"
  ];

  let indiceActual = 0;

  const imagenActual = document.getElementById("imagen-actual");
  const btnAnterior = document.getElementById("anterior");
  const btnSiguiente = document.getElementById("siguiente");
  const contadorPagina = document.getElementById("contador-pagina");

  function actualizarImagen() {
    imagenActual.src = imagenes[indiceActual];
    imagenActual.alt = `PÃ¡gina ${indiceActual + 1}`;
    contadorPagina.textContent = `PÃ¡gina ${indiceActual + 1} de ${imagenes.length}`;

    btnAnterior.disabled = indiceActual === 0;
    btnSiguiente.disabled = indiceActual === imagenes.length - 1;
  }

  btnAnterior.addEventListener("click", () => {
    if (indiceActual > 0) {
      indiceActual--;
      actualizarImagen();
    }
  });

  btnSiguiente.addEventListener("click", () => {
    if (indiceActual < imagenes.length - 1) {
      indiceActual++;
      actualizarImagen();
    }
  });

  actualizarImagen();
</script>
