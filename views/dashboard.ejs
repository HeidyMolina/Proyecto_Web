<audio id="audioDashboard" src="/audio/ejercito.mp3" loop></audio>

<script>
  const audioDashboard = document.getElementById("audioDashboard");

  // Intentar reproducir en cuanto carga el dashboard
  window.addEventListener("load", () => {
    audioDashboard.currentTime = 0;
    audioDashboard.play().catch(err => {
      console.warn("El navegador bloque√≥ la reproducci√≥n autom√°tica:", err);

      // Si lo bloquea, mostrar bot√≥n flotante para iniciar
      if (!document.getElementById("btnPlayAudio")) {
        const btn = document.createElement("button");
        btn.id = "btnPlayAudio";
        btn.textContent = "‚ñ∂ Reproducir M√∫sica";
        Object.assign(btn.style, {
          position: "fixed",
          bottom: "20px",
          right: "20px",
          padding: "12px 20px",
          background: "#2e7d32",
          color: "#fff",
          border: "none",
          borderRadius: "8px",
          cursor: "pointer",
          fontWeight: "bold",
          boxShadow: "0 4px 10px rgba(0,0,0,0.3)",
          zIndex: 9999
        });

       
        document.body.appendChild(btn);
      }
    });
  });

  // Pausar el audio cuando se cambie de vista/p√°gina
  window.addEventListener("beforeunload", () => {
    audioDashboard.pause();
    audioDashboard.currentTime = 0;
  });
</script>
